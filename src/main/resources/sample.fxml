<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600" minWidth="1000" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.robotcontrol.gui.Controller">
   <left>
      <VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="150.0" style="-fx-background-color: #a9a9a9;" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="currentCoords" contentDisplay="CENTER" prefHeight="50.0" prefWidth="200.0" text="coords" textAlignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font></Label>
            <JFXButton fx:id="gcodeButton" onAction="#changePaneToGCode" onMouseEntered="#gcodeEntered" onMouseExited="#gcodeExited" prefHeight="100.0" prefWidth="200.0" text="G-code">
               <font>
                  <Font size="20.0" />
               </font></JFXButton>
            <JFXButton fx:id="positionalButton" onAction="#changePaneToPositional" onMouseEntered="#positionalEntered" onMouseExited="#positionalExited" prefHeight="100.0" prefWidth="200.0" text="Positional">
               <font>
                  <Font size="20.0" />
               </font></JFXButton>
            <JFXButton fx:id="settingsButton" onAction="#changePaneToSettings" onMouseEntered="#settingsEntered" onMouseExited="#settingsExited" prefHeight="100.0" prefWidth="200.0" text="Settings">
               <font>
                  <Font size="20.0" />
               </font></JFXButton>
         </children>
      </VBox>
   </left>
   <center>
      <AnchorPane fx:id="content" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
